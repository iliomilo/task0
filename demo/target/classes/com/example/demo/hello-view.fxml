<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="400" prefWidth="350" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.HelloController">
   <children>
      <FlowPane alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label text="Сумма в чеке">
               <FlowPane.margin>
                  <Insets left="10.0" />
               </FlowPane.margin>
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Label>
            <TextField fx:id="sumField" prefWidth="220.0">
               <FlowPane.margin>
                  <Insets left="15.0" />
               </FlowPane.margin>
            </TextField>
         </children></FlowPane>
      <HBox alignment="CENTER_LEFT" prefHeight="75.0" prefWidth="200.0">
         <children>
            <Button mnemonicParsing="false" prefWidth="125.0" text="Большие чаевые" onAction="#onBigTipsClick">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
               <font>
                  <Font name="Arial" size="13.0" />
               </font>
            </Button>
            <Label fx:id="bigTipsLabel" text="Расчет: ">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="130.0" prefHeight="75.0" prefWidth="200.0">
         <children>
            <Button mnemonicParsing="false" prefWidth="125.0" text="Обычные чаевые" onAction="#onMidTipsClick">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
               <font>
                  <Font name="Arial" size="13.0" />
               </font>
            </Button>
            <Label fx:id="midTipsLabel" text="Расчет: ">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="225.0" prefHeight="75.0" prefWidth="200.0">
         <children>
            <Button mnemonicParsing="false" prefWidth="125.0" text="Мелочь" onAction="#onSmallTipsClick">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
               <font>
                  <Font name="Arial" size="13.0" />
               </font>
            </Button>
            <Label fx:id="smallTipsLabel" text="Расчет: ">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
   </children>
</VBox>
